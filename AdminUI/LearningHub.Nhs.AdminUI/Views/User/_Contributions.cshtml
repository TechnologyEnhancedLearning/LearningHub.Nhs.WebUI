@model LearningHub.Nhs.Models.Common.PagedResultSet<LearningHub.Nhs.Models.Resource.ResourceAdminSearchResultViewModel>
@using LearningHub.Nhs.Models.Enums

<div class="table-responsive">
    <table class="table table-striped" cellpadding="0" cellspacing="0">
        <thead>
            <tr>
                <th style="width:10%" data-column="VersionId" data-type="number">Id</th>
                <th style="width:10%" data-column="ReferenceId" data-type="number">Reference</th>
                <th style="width:30%" data-column="Title" data-type="text">Title</th>
                <th style="width:12%">Create Date</th>
                <th style="width:10%">Type</th>
                <th style="width:20%">Version Details</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ResourceVersionId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ResourceReferenceIdList)
                    </td>
                    <td>
                        @Html.ActionLink(item.Title, "Details", "Resource", new { id = item.ResourceVersionId })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateDate.DateTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ResourceTypeDescription)
                    </td>
                    <td>
                        <span class="p-2 @(item.VersionStatusEnum == VersionStatusEnum.Publishing ? "info-highlight" : "")">@Html.DisplayFor(modelItem => item.VersionFullDetails)</span>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>