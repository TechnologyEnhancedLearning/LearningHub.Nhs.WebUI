@{
    ViewData["Title"] = "ForgotPassword Acknowledgement";
}

<div class="forgot-password">
    <div class="nhsuk-width-container app-width-container">
        <div class="nhsuk-grid-row">
            <div class="nhsuk-grid-column-full nhsuk-u-padding-top-9">
                <div class="nhsuk-u-reading-width">
                    <h1 class="nhsuk-heading-xl"> Success</h1>


                    <p class="nhsuk-body">
                        Your password has been changed successfully.
                    </p>
                    <p class="nhsuk-body">
                        You can now continue to login and explore the Learning Hub.
                    </p>
                    <div class="nhsuk-u-padding-bottom-9">
                        <form asp-controller="Home" asp-action="Index" method="post">
                            <button class="nhsuk-button" id="save-button" type="submit">Continue to the Learning Hub</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>