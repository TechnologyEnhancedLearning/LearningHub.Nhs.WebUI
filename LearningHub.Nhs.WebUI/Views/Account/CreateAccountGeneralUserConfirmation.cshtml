@using LearningHub.Nhs.WebUI.Models.Account

@{
    ViewData["Title"] = "General User Account";
    var errorHasOccurred = !ViewData.ModelState.IsValid;
}
@section styles{
    <link rel="stylesheet" type="text/css" href="~/css/nhsuk/pages/createaccount.css" />
}
<div class="create-account">
    <div class="nhsuk-width-container app-width-container">
        <div class="nhsuk-grid-row">
            <div class="nhsuk-grid-column-three-quarters nhsuk-u-padding-top-2">
                <vc:back-link asp-controller="Account" asp-action="CreateAccountEmailVerification" link-text="Back to: Create an account" />
                <h1 class="nhsuk-heading-xl">General User Account</h1>
                <div class="nhsuk-inset-text nhsuk-u-margin-top-4 nhsuk-u-margin-bottom-7">
                    <span class="nhsuk-u-visually-hidden">Information: </span>
                    <p>If you have a qualifying work email address you can create a Full user account. Full users are able to access learning community resources, contribute and share knowledge and content.</p>
                </div>
                <div>
                    <p>
                        The email address you have entered allows access to the learning community
                        resources but you cannot contribute content
                    </p>
                </div>
                <form class="nhsuk-u-margin-bottom-2" asp-controller="Registration" asp-action="CreateAccountGeneralUserConfirmation" method="post">
                    <input type="hidden" name="formSubmission" value="true">
                    <input type="hidden" name="returnToConfirmation" value="@Context.Request.Query["returnToConfirmation"]">
                    <button class="nhsuk-button" type="submit">Continue</button>
                </form>
                <p class="nhsuk-body-s nhsuk-u-margin-bottom-9">
                    <a href="https://support.learninghub.nhs.uk/support/solutions/articles/80000986599-who-can-access-the-learning-hub-" target="_blank">Who can access the Learning Hub?</a>
                </p>
            </div>
        </div>
    </div>
</div>