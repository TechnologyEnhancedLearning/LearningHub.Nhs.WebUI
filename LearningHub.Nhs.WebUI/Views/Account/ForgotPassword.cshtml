@{
    ViewData["Title"] = "ForgotPassword";
}
<div class="lh-padding-fluid">
    <div class="lh-container-xl">
        <div id="forgotPassword" class="pt-5 mx-0">
            <div class="mt-2">
                <div v-if="result === null">
                    <h1>Forgotten username or password</h1>
                    <p class="my-5 py-1">To retrieve your username or reset your password, enter your email address below and select Continue.</p>
                    <form v-on:submit.prevent="submit">
                        <div class="form-group" v-bind:class="{'error-container': showError && $v.$invalid }">
                            <label for="EmailAddress">Email address</label>
                            <span class="error" v-cloak v-if="showError && !$v.emailAddress.email">Enter an email address in the correct format, like name@example.com</span>
                            <span class="error" v-cloak v-if="showError && !$v.emailAddress.required">Enter your email address</span>
                            <input id="EmailAddress" v-model="emailAddress" class="form-control mt-4" v-on:focus="showError = false" v-on:blur="showError = true" />
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <button class="btn btn-primary btn-custom">Continue</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="mt-2">
                <div v-if="result !== null" v-cloak>
                    <div v-if="result">
                        <h1>Thank you</h1>
                        <p class="my-5 py-1">If an account was found with this email address, an email has been sent. Please follow the instructions in the email to access your account.</p>
                    </div>
                    <div v-if="!result">
                        <h1>Unable to identify user account</h1>
                        <p class="my-5 py-1">More than one account exists with this email address, so we do not know which account belongs to you. Please contact the <a>support team</a> if you need help.</p>
                        <button class="btn btn-primary" onclick="window.location.pathname='/'">Previous</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript" src="~/js/bundle/forgotpassword.js" asp-append-version="true"></script>
}
