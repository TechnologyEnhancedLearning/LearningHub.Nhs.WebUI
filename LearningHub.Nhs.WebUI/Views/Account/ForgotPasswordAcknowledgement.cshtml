@using Microsoft.Extensions.Options;
@using LearningHub.Nhs.WebUI.Configuration;
@inject IOptions<Settings> settings;
@{
    ViewData["Title"] = "ForgotPassword Acknowledgement";
    Layout = ViewData["Layout"].ToString();
}
<div class="forgot-password">
    <div class="nhsuk-width-container app-width-container">
        <div class="nhsuk-grid-row">
            <div class="nhsuk-grid-column-full nhsuk-u-padding-top-9">
                    <h1 class="nhsuk-heading-xl"> Thank you</h1>
                    <p class="nhsuk-body nhsuk-u-reading-width">
                        If an account was found with this email address, an email has been sent. Please follow the instructions in the email to access your account.
                    </p>
                    <div class="nhsuk-u-padding-bottom-9">
                        <p class="nhsuk-body">
                            For more information on how to access the Learning Hub, visit our  <a href="@settings.Value.SupportUrls.SupportSite" target="_blank">support site.</a>
                        </p>
                    </div>
            </div>
        </div>
    </div>
</div>