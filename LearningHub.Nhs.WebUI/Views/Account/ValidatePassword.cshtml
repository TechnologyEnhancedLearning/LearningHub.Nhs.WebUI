@inject Microsoft.Extensions.Options.IOptions<LearningHub.Nhs.WebUI.Configuration.Settings> options;
@{
    ViewData["Title"] = "ForgotPassword Acknowledgement";
    var supportUrl = options.Value.SupportUrls.SupportForm;
}
<div class="forgot-password">
    <div class="nhsuk-width-container app-width-container">
        <div class="nhsuk-grid-row">
            <div class="nhsuk-grid-column-full nhsuk-u-padding-top-9">
                <div class="nhsuk-u-reading-width">
                    <h1 class="nhsuk-heading-xl"> This link is not valid</h1>
                    <p class="nhsuk-body">
                        This link is not valid or has expired.
                    </p>
                    <p class="nhsuk-body">

                        <a href="/forgotten-password">Create a new password</a> for your account.
                    </p>
                    <div class="nhsuk-u-padding-bottom-9">
                        <p class="nhsuk-body">
                            If you need help, please contact the <a href="@supportUrl" target="_blank">support team.</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>