@inject Microsoft.Extensions.Options.IOptions<LearningHub.Nhs.WebUI.Configuration.Settings> options

@model LandingPageViewModel
@using Microsoft.Extensions.Options;
@using LearningHub.Nhs.WebUI.Configuration;
@inject IOptions<Settings> settings

<div id="notAutorised" class="modal" tabindex="-1" role="dialog" data-backdrop="static" data-keyboad="false">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-close-button">
                <button type="button" class="close" onclick="location.href='@Url.Action("Logout", "Home")'" aria-label="Close">
                    <span aria-hidden="true"><i class="fa-solid fa-xmark"></i></span>
                </button>
            </div>
            <div class="modal-header">
                <div class="modal-title"><span>You cannot access the Learning Hub yet</span></div>
            </div>

            @{
                string link = "http://" + Model.TenantUrl;
                string description = Model.TenantDescription;
                <div class="modal-body">
                    <p>
                        <span>
                            You have tried to sign in with your @description account. This does not allow access to the Learning Hub, but it does allow access to the  @description Hub.
                            <br /><br />
                            This is a beta release of the platform and access will be widened in the future. If you think you are <a href="@options.Value.SupportUrls.WhoCanAccessTheLearningHub">eligible for access</a>, contact our <a href="@options.Value.SupportUrls.SupportForm">support team</a>.
                        </span>
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-custom btn-lg" onclick="location.href='@link'">Visit the @description Hub</button>
                </div>
            }
        </div>
    </div>
</div>
