@model LearningHub.Nhs.WebUI.Models.NotificationDetailModel

@if (Model.ModalType == NotificationModalType.View)
{
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-close-button">                
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"><i class="fa-solid fa-xmark"></i></span>
                   </button>
            </div>
            <div class="modal-body">
                <h1 class="nhsuk-heading-xl">@Model.Title</h1>
                <p class="pb-3 small">@Model.Date.ToString("dd MMMM yyyy")</p>
                <p>@Html.Raw(Model.Body)</p>
            </div>
        </div>
    </div>
}
else
{
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content">
            <div class="modal-close-button">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"><i class="fa-solid fa-xmark"></i></span>
                </button>
            </div>
            <div class="text-center modal-body">
                <p>Deleting this notification cannot be undone.</p>
                <p>Are you sure you want to delete this notification?</p>

            </div>
            <div class="mx-auto modal-footer">
                <button type="button" class="mr-3 btn btn-outline-custom" data-dismiss="modal">Cancel</button>                
                <button type="button" data-targeturl="@Url.Action("Delete", "Notification", new { notificationId = Model.NotificationId, userNotificationId = Model.Id })" class="ml-3 btn btn-danger-custom delete-notification">Delete</button>
            </div>
        </div>
    </div>
}

