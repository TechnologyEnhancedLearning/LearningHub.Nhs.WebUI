@model LearningHub.Nhs.WebUI.Models.UserProfile.UserLocationViewModel
@{
    ViewData["Title"] = "Location - Region";
}

<div class="nhsuk-width-container">
    <main class="nhsuk-main-wrapper nhsuk-main-wrapper--s" id="maincontent" role="main">
        <form asp-controller="User" asp-action="LocationSelectRegion" method="post">
            <div class="nhsuk-grid-row">
                <div class="nhsuk-grid-column-two-thirds">                                  
                    <dl class="nhsuk-summary-list">
                        <div class="nhsuk-summary-list__row">
                            <dt class="nhsuk-summary-list__key">
                                Country
                            </dt>
                            <dd class="nhsuk-summary-list__value">
                               @Model.SelectedCountryName
                            </dd>
                        </div>
                        <div class="nhsuk-summary-list__row">
                            <dt class="nhsuk-summary-list__key">
                                <label asp-for="SelectedRegionId" class="control-label"></label>
                            </dt>
                            <dd class="nhsuk-summary-list__value">
                                <select asp-for="SelectedRegionId" class="form-control" asp-items="@ViewBag.Regions"></select>                                
                            </dd>
                        </div>
                        <div class="nhsuk-summary-list__row">
                            <dt class="nhsuk-summary-list__key">
                                <button type="submit" class="btn btn-custom">
                                    Next
                                </button>
                            </dt>
                            <dd class="nhsuk-summary-list__value">
                                <a asp-controller="User" asp-action="LocationSelectCountry" asp-route-selectedcountryid="@Model.SelectedCountryId">Back</a>
                                <a asp-controller="User" asp-action="Index">Cancel</a>
                            </dd>
                        </div>
                     </dl>
                </div>
            </div>
            @Html.HiddenFor(m => m.SelectedCountryId)
            @Html.HiddenFor(m => m.SelectedCountryName)
            @Html.AntiForgeryToken()
        </form>
    </main>
</div>